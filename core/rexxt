#!/bin/bash
#
# rexxt - RexxJS Test Runner (Node.js development version)
# Sets REXXJS_TEST_RUNNER=true and delegates to core/src/cli.js
#
# This provides the same test runner functionality as bin/rexxt but uses
# Node.js directly instead of the packaged binary. Useful for development.
#

set -e

# Get the directory where this script is located
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Set test runner mode
export REXXJS_TEST_RUNNER=true

# Delegate to cli.js with Node.js
exec node "$SCRIPT_DIR/src/cli.js" "$@"
