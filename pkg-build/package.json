{
  "name": "rexxjs-standalone",
  "version": "1.0.0",
  "description": "RexxJS Standalone Executable",
  "main": "cli.js",
  "bin": {
    "rexx": "./cli.js"
  },
  "scripts": {
    "build:extras": "node -e \"const {execSync,spawnSync}=require('child_process'); const fs=require('fs'); const path=require('path'); const dirs=['../extras/addresses/provisioning-and-orchestration']; for (const d of dirs) { const cwd=path.resolve(__dirname,d); const hasLock = fs.existsSync(path.join(cwd,'package-lock.json')) || fs.existsSync(path.join(cwd,'npm-shrinkwrap.json')); execSync(hasLock?'npm ci':'npm install', {stdio:'inherit', cwd}); execSync('npm run build', {stdio:'inherit', cwd}); }\"",
    "build:all": "./build-all.sh"
  },
  "pkg": {
    "targets": [
      "node18-linux-x64"
    ],
    "compress": "Brotli",
    "assets": [
      "../core/src/**/*",
      "system-address.js",
      "../extras/addresses/provisioning-and-orchestration/address-ssh.js",
      "../extras/addresses/sqlite3/sqlite-address.js",
      "../extras/addresses/anthropic-ai/claude/claude-address.js",
      "../extras/addresses/gemini-ai/src/gemini-pro.js",
      "../extras/addresses/gemini-ai/src/gemini-pro-vision.js", 
      "../extras/addresses/gemini-ai/src/checkpoint-handler.js",
      "../extras/addresses/open-ai/chat-completions/src/chat-completions.js",
      "../extras/addresses/jq/src/jq-address.js",
      "../extras/addresses/provisioning-and-orchestration/bundled-container-handlers.bundle.js",
      "../extras/addresses/provisioning-and-orchestration/bundled-remote-handlers.bundle.js",
      "../extras/addresses/shared-utils/index.js"
    ],
    "scripts": [
      "../core/src/**/*.js",
      "../extras/addresses/provisioning-and-orchestration/address-ssh.js",
      "../extras/addresses/sqlite3/sqlite-address.js",
      "../extras/addresses/anthropic-ai/claude/claude-address.js",
      "../extras/addresses/gemini-ai/src/gemini-pro.js",
      "../extras/addresses/gemini-ai/src/gemini-pro-vision.js",
      "../extras/addresses/gemini-ai/src/checkpoint-handler.js", 
      "../extras/addresses/open-ai/chat-completions/src/chat-completions.js",
      "../extras/addresses/jq/src/jq-address.js",
      "../extras/addresses/provisioning-and-orchestration/bundled-container-handlers.bundle.js",
      "../extras/addresses/provisioning-and-orchestration/bundled-remote-handlers.bundle.js",
      "../extras/addresses/shared-utils/index.js"
    ]
  },
  "dependencies": {
    "pkg": "^5.8.1"
  }
}
