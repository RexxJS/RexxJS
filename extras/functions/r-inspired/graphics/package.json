{
  "name": "rexxjs-r-graphics",
  "version": "1.0.0",
  "description": "R-style graphics and visualization functions for RexxJS",
  "main": "index.js",
  "scripts": {
    "test": "node --experimental-vm-modules ../../../../../node_modules/jest/bin/jest.js",
    "test:watch": "jest --watch",
    "install:core": "cd ../../../../core && npm install",
    "pretest": "npm run install:core",
    "build": "webpack --config webpack.bundle.config.js --mode=production",
    "build:dev": "webpack --config webpack.bundle.config.js --mode=development"
  },
  "dependencies": {
    "buffer": "^6.0.3",
    "canvas": "^3.2.0",
    "crypto-browserify": "^3.12.1",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "util": "^0.12.5",
    "webpack": "^5.101.3",
    "webpack-cli": "^5.1.4"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "keywords": [
    "rexxjs",
    "r-functions",
    "graphics",
    "visualization",
    "plotting",
    "charts"
  ],
  "author": "RexxJS Project",
  "license": "MIT",
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/*.spec.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      ".*png-rendering.*",
      ".*playwright.*"
    ]
  },
  "directories": {
    "test": "tests"
  },
  "type": "commonjs"
}
